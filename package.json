{
  "name": "RestClient",
  "version": "1.0.0",
  "description": "An AWS Lambda function implementing a rest client interface",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "prepare": "husky install",
    "lint": "npx eslint \"**/*.{ts,tsx}\" --quiet --fix",
    "format": "prettier --write '**/*.{ts,tsx,json}'",
    "check-format": "prettier --check '**/*.{ts,tsx,json}'",
    "sonar-qube": "npx sonarqube-scanner"
  },
  "dependencies": {
    "@aws-lambda-powertools/logger": "^1.11.0",
    "@aws-lambda-powertools/parameters": "^1.11.1",
    "@aws-sdk/lib-storage": "^3.367.0",
    "@aws-sdk/util-stream-node": "^3.360.0",
    "@types/aws-lambda": "^8.10.119",
    "@types/aws-sdk": "^2.7.0",
    "@types/supertest": "^6.0.1",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "aws-cdk-lib": "^2.110.1",
    "aws-sdk": "^2.1479.0",
    "aws-sdk-client-mock-jest": "^3.0.0",
    "axios": "^1.6.2",
    "axios-mock-adapter": "^1.22.0",
    "constructs": "^10.2.58",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "https": "^1.0.0",
    "iconv-lite": "^0.6.3",
    "pg": "^8.11.3",
    "prettier": "^3.0.3",
    "stream": "^0.0.2",
    "supertest": "^6.3.3",
    "tar": "^6.1.15",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.22.5",
    "@types/jest": "^27.5.2",
    "@types/node": "^20.8.9",
    "aws-sdk-client-mock": "^3.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.2",
    "sonarqube-scanner": "^3.2.0",
    "ts-jest": "^29.1.1",
    "typescript": "^4.4.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx,json}": [
      "prettier --write '**/*.{ts,tsx,json}'",
      "git add"
    ]
  }
}
